# Database Configuration
# PostgreSQL with TimescaleDB extension
POSTGRES_URL=postgresql://aiinvest:pass@localhost:5432/aiinvest
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=aiinvest
POSTGRES_PASSWORD=pass
POSTGRES_DB=aiinvest

# Redis Configuration
# Used for caching and task queues
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# S3-Compatible Storage (MinIO)
# Used for storing backtest results, strategy artifacts, and logs
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=aiinvest-artifacts
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1

# Alpaca API Configuration
# Paper trading credentials - get from https://alpaca.markets/
ALPACA_KEY=your_alpaca_api_key_here
ALPACA_SECRET=your_alpaca_api_secret_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Application Settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Web Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Worker Configuration
WORKER_CONCURRENCY=4
WORKER_QUEUE=default

# Security
# Generate a secure secret key for production
SECRET_KEY=change_this_to_a_random_secret_key_in_production
JWT_SECRET=change_this_to_a_random_jwt_secret_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Monitoring
GRAFANA_URL=http://localhost:3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Optional: External Data Providers
# Alpha Vantage for market data
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Polygon.io for market data
POLYGON_API_KEY=your_polygon_key_here

# Optional: Notification Services
# Slack webhook for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@aiinvest.com

# Feature Flags
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_BACKTEST=true
ENABLE_STRATEGY_BUILDER=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000
